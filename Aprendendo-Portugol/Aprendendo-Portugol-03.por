programa {
  funcao inicio() {
    // parte 1
    escreva("Olá Mundo!\n\n")
    
    // parte 2
    cadeia nome
    escreva("Qual seu nome? ")
    leia(nome)
    escreva("Seja Bem-Vindo(a) ", nome, "\n\n")

    // parte 3
    real n1, n2
    escreva("Número Um: ")
    leia(n1)
    escreva("Número Dois: ")
    leia(n2)
    escreva(n1, " - (", n2, ") = ", n1 - n2, "\n")
  }
}
